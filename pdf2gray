#!/bin/bash
# Down-scale colour PDF to grey.
#
# yaswant.pradhan
# -----------------------------------------------------------------------------
infile="$1"
outfile="${infile%.*}-gray.pdf"

echo "$infile -> $outfile"

gs \
  -sDEVICE=pdfwrite \
  -dCompatibilityLevel=1.4 \
  -sColorConversionStrategy=Gray \
  -dProcessColorModel=/DeviceGray \
  -dPDFSETTINGS=/ebook \
  -dCompressFonts=true \
  -dNOPAUSE \
  -dQUIET \
  -dBATCH \
  -dDetectDuplicateImages \
  -sOutputFile="$outfile" \
  "$infile"
